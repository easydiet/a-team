<easy:DietTreatmentDetailView xmlns:bxml="http://pivot.apache.org/bxml"
xmlns:easy="at.easydiet.view"
xmlns:easycontent="at.easydiet.view.content"
xmlns="org.apache.pivot.wtk">
	<navigationButtons>
		<easy:EasyDietContentView.NavigationButton text="Dashboard" view="DashboardView" />
		<easy:PatientNavigationButton view="PatientDetailView" />
		<easy:DietTreatmentNavigationButton />
	</navigationButtons>
	<toolbarButtons>
		<easy:EasyDietContentView.ToolbarButton action="createDietPlan" text="Diätplan anlegen" icon="@diet_add.png" />
		<easy:EasyDietContentView.ToolbarButton action="todo" text="Kontaktjournaleintrag anlegen" icon="@contact_journal_add.png" />
		<easy:EasyDietContentView.ToolbarButton action="todo" text="Ernährungsprotokoll anlegen" icon="@report_add.png" />
		<easy:EasyDietContentView.ToolbarButton action="showHelp" text="Hilfe" icon="@help.png" />
	</toolbarButtons>
	<Form>
		<Form.Section heading="Diätpläne">
			<Border>
				<ScrollPane preferredHeight="200"
				horizontalScrollBarPolicy="fill"
				verticalScrollBarPolicy="fill_to_capacity">
					<TableView bxml:id="_dietPlanTable" selectMode="single">
						<columns>
							<TableView.Column name="Start" width="150" headerData="Von">
								<cellRenderer>
									<easycontent:DateCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="End" width="150" headerData="Bis">
								<cellRenderer>
									<easycontent:DateCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="Name" width="450" headerData="Name"/>
						</columns>
					</TableView>
					<columnHeader>
						<TableViewHeader tableView="$_dietPlanTable"/>
					</columnHeader>
				</ScrollPane>
			</Border>
		</Form.Section>
		<Form.Section heading="Kontaktjournal">
			<Border>
				<ScrollPane preferredHeight="200"
				horizontalScrollBarPolicy="fill"
				verticalScrollBarPolicy="fill_to_capacity">
					<TableView bxml:id="_contactJournalTable" selectMode="single">
						<columns>
							<TableView.Column name="Date" width="150" headerData="Datum">
								<cellRenderer>
									<easycontent:DateCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="ContactType" width="450" headerData="Art">
								<cellRenderer>
									<easycontent:NameCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="CreatedBy" width="150" headerData="Ersteller">
								<cellRenderer>
									<easycontent:NameCellRenderer />
								</cellRenderer>
							</TableView.Column>
						</columns>
					</TableView>
					<columnHeader>
						<TableViewHeader tableView="$_contactJournalTable"/>
					</columnHeader>
				</ScrollPane>
			</Border>
		</Form.Section>
		<Form.Section heading="Ernährungsprotokoll">
			<Border>
				<ScrollPane preferredHeight="200"
				horizontalScrollBarPolicy="fill"
				verticalScrollBarPolicy="fill_to_capacity">
					<TableView bxml:id="_nutritionProtocolTable" selectMode="single">
						<columns>
							<TableView.Column name="Date" width="375" headerData="Von">
								<cellRenderer>
									<easycontent:DateCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="Name" width="375" headerData="Name"/>
						</columns>
					</TableView>
					<columnHeader>
						<TableViewHeader tableView="$_nutritionProtocolTable"/>
					</columnHeader>
				</ScrollPane>
			</Border>
		</Form.Section>
	</Form>
</easy:DietTreatmentDetailView>