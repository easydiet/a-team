<easy:EasyDietMainWindow xmlns:bxml="http://pivot.apache.org/bxml"
xmlns:easy="at.easydiet.view"
maximized="true"
xmlns:content="org.apache.pivot.wtk.content"
xmlns="org.apache.pivot.wtk"
>
	<actionMappings>
		<Window.ActionMapping action="quitApplication" keyStroke="CMD-Q"/>
		<Window.ActionMapping action="showHelp" keyStroke="F1"/>
	</actionMappings>
	<TablePane>
		<columns>
			<TablePane.Column width="1*" />
		</columns>
		<TablePane.Row height="-1">
			<TablePane>
				<columns>
					<TablePane.Column width="1*" />
					<TablePane.Column width="100" />
				</columns>
				<TablePane.Row>
					<MenuBar bxml:id="menu" styles="{backgroundColor: '#777799'}">
						<MenuBar.Item buttonData="Datei">
							<Menu>
								<Menu.Section>
									<Menu.Item action="quitApplication">
										<buttonData>
											<content:MenuItemData text="Beenden" keyboardShortcut="CMD-Q"/>
										</buttonData>
									</Menu.Item>
								</Menu.Section>
							</Menu>
						</MenuBar.Item>
						<MenuBar.Item buttonData="Patientendaten" action="todo" />
						<MenuBar.Item buttonData="Rezepte" action="todo" />
						<MenuBar.Item buttonData="Hilfe">
							<Menu>
								<Menu.Section>
									<Menu.Item action="showHelp">
										<buttonData>
											<content:MenuItemData text="Hilfe" keyboardShortcut="F1"/>
										</buttonData>
									</Menu.Item>
									<Menu.Item action="showInfo">
										<buttonData>
											<content:MenuItemData text="Ãœber EasyDiet"/>
										</buttonData>
									</Menu.Item>
								</Menu.Section>
							</Menu>
						</MenuBar.Item>
					</MenuBar>
					<Label text="EasyDiet" styles="{backgroundColor: '#777799',color: '#0000aa', font: {size: '140%'}}" />
				</TablePane.Row>
			</TablePane>
		</TablePane.Row>
		<TablePane.Row height="-1">
			<FlowPane bxml:id="navigation" styles="{backgroundColor: '#bbbbbb', padding: 6, spacing: 3}">
			</FlowPane>
		</TablePane.Row>
		<TablePane.Row height="70">
			<BoxPane bxml:id="toolbar" styles="{backgroundColor: '#dddddd', padding:6, spacing:8, fill:true}">
			</BoxPane>
		</TablePane.Row>
		<TablePane.Row height="1*">
			<ScrollPane>
				<CardPane bxml:id="content">
				</CardPane>
			</ScrollPane>
		</TablePane.Row>
	</TablePane>
</easy:EasyDietMainWindow>