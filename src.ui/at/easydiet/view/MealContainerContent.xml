<!-- START: Meal -->
<Border styles="{padding: 10, cornerRadii:10, padding:5}"
xmlns:bxml="http://pivot.apache.org/bxml"
xmlns:easy="at.easydiet.view"
xmlns:easycontent="at.easydiet.view.content"
xmlns:content="org.apache.pivot.wtk.content"
xmlns:effects="org.apache.pivot.wtk.effects"
xmlns:collections="org.apache.pivot.collections"
xmlns="org.apache.pivot.wtk"
>
	<TablePane>
		<columns>
			<TablePane.Column width="450" />
			<TablePane.Column width="30" />
			<TablePane.Column width="250" />
		</columns>
		<TablePane.Row>
			<!-- START: Meal Setup -->
			<TablePane>
				<columns>
					<TablePane.Column width="30" />
					<TablePane.Column width="5" />
					<TablePane.Column width="1*" />
				</columns>
				<TablePane.Row>
					<TextInput bxml:id="mealCode" prompt="FR" maximumLength="2" />
					<Label text="-" />
					<TextInput bxml:id="mealName" prompt="Frühstück" />
				</TablePane.Row>
			</TablePane>
			<TablePane.Filler />
			<BoxPane styles="{horizontalAlignment: 'right'}">
				<LinkButton bxml:id="deleteMealButton" styles="{color:'#DD0000'}">
					<content:ButtonData text="Mahlzeit löschen" />
				</LinkButton>
			</BoxPane>
			<!-- END: Meal SETUP -->
		</TablePane.Row>
		<TablePane.Row>
			<!-- START: Parameter of Meal -->
			<Rollup styles="{fill:true}">
				<heading>
					<BoxPane styles="{padding: 5}">
						<Label text="Zielparameter der Mahlzeit festlegen" />
					</BoxPane>
				</heading>
				<BoxPane styles="{padding: 5}">
					<Label text="Hallo Parameterwelt" />
				</BoxPane>
			</Rollup>
			<!-- END: Parameter of Meal -->
		</TablePane.Row>
		<TablePane.Row height="30">
			<!-- START: Headings of Recipe Setup -->
			<Label text="Angelegte Rezepte (Alternativen sind eingerückt)" styles="{verticalAlignment: 'center'}"   />
			<TablePane.Filler />
			<BoxPane styles="{verticalAlignment: 'center'}">
				<TextInput prompt="Rezepte suchen" bxml:id="recipeSearchBox" />
			</BoxPane>
			<!-- END: Headings of Recipe Setup -->
		</TablePane.Row>
		<TablePane.Row height="200">
			<!-- START: Recipe Setup -->
			<Border>
				<ScrollPane>
					<TableView bxml:id="mealLines" selectMode="multi">
						<columns>
							<TableView.Column name="quantity" width="70" headerData="Menge">
								<cellRenderer>
									<easycontent:MealLineCellRenderer arrowVisible="true" />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="unit.name" width="70" headerData="Einheit">
								<cellRenderer>
									<easycontent:MealLineCellRenderer />
								</cellRenderer>
							</TableView.Column>
							<TableView.Column name="recipe.name" width="305" headerData="Name">
								<cellRenderer>
									<easycontent:MealLineCellRenderer />
								</cellRenderer>
							</TableView.Column>
						</columns>
						<rowEditor>
							<easy:EasyTableViewRowEditor editEffect="horizontal_slide">
								<cellEditors>
									<quantity>
										<TextInput strictValidation="true" textKey="quantity">
											<validator>
												<easycontent:QuantityValidator />
											</validator>
											<textBindMapping>
												<easycontent:QuantityBindMapping />
											</textBindMapping>
										</TextInput>
									</quantity>
									<unit.name>
										<ListButton selectedItemKey="unit" selectedItemBindType="store" />
									</unit.name>
									<recipe.name>
										<Label textKey="recipe.name" styles="{verticalAlignment: 'center'}" />
									</recipe.name>
								</cellEditors>
							</easy:EasyTableViewRowEditor>
						</rowEditor>
					</TableView>
					<columnHeader>
						<TableViewHeader tableView="$mealLines"/>
					</columnHeader>
				</ScrollPane>
			</Border>
			<BoxPane orientation="vertical" styles="{fill:true}">
				<easy:SimpleButton text="&lt;" bxml:id="addRecipeToMeal" />
				<easy:SimpleButton text="&lt;~" bxml:id="addRecipeToMealLine" />
				<easy:SimpleButton text="&gt;"  bxml:id="removeRecipeFromMeal" />
			</BoxPane>
			<Border>
				<ScrollPane>
					<TableView bxml:id="recipeSearchResult" selectMode="multi">
						<columns>
							<TableView.Column name="blsCode" width="50" headerData="BLS" />
							<TableView.Column name="name" width="190" headerData="Name" />
						</columns>
					</TableView>
					<columnHeader>
						<TableViewHeader tableView="$recipeSearchResult"/>
					</columnHeader>
				</ScrollPane>
			</Border>
			<!-- END: Recipe Setup -->
		</TablePane.Row>
	</TablePane>
</Border>
<!-- END: Meal -->
